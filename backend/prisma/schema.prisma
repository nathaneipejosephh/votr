generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Admin/Organizer user model for Google OAuth
model User {
  id            String        @id @default(uuid())
  googleId      String        @unique
  email         String        @unique
  name          String
  picture       String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  competitions  Competition[]
}

model Competition {
  id          String       @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  isActive    Boolean      @default(true)
  isPublished Boolean      @default(false)
  accessCode  String?      @unique
  contestants Contestant[]
  votes       Vote[]

  // Owner relationship
  ownerId     String?
  owner       User?        @relation(fields: [ownerId], references: [id])

  @@index([accessCode])
  @@index([ownerId])
}

model Contestant {
  id            String      @id @default(uuid())
  name          String
  description   String?
  imageUrl      String?
  competitionId String
  competition   Competition @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  voteRankings  VoteRanking[]
  createdAt     DateTime    @default(now())

  @@index([competitionId])
}

model Vote {
  id            String        @id @default(uuid())
  voterId       String        // UUID to track unique voters
  competitionId String
  competition   Competition   @relation(fields: [competitionId], references: [id], onDelete: Cascade)
  rankings      VoteRanking[]
  createdAt     DateTime      @default(now())

  // Voter identity options
  isAnonymous   Boolean       @default(true)
  voterName     String?       // Display name if not anonymous
  voterEmail    String?       // Google email if signed in to vote

  @@unique([voterId, competitionId]) // Prevent duplicate votes
  @@index([competitionId])
}

model VoteRanking {
  id           String     @id @default(uuid())
  voteId       String
  vote         Vote       @relation(fields: [voteId], references: [id], onDelete: Cascade)
  contestantId String
  contestant   Contestant @relation(fields: [contestantId], references: [id], onDelete: Cascade)
  rank         Int        // 1-5 for positions
  points       Int        // Borda count points: 7, 5, 3, 2, 1

  @@index([voteId])
  @@index([contestantId])
}
